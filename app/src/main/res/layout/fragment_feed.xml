<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="java.util.List" />

        <import type="io.github.horaciocome1.reaque.data.posts.Post" />

        <import type="android.view.View" />

        <import type="io.github.horaciocome1.reaque.util.Constants" />

        <variable
            name="posts"
            type="List&lt;Post&gt;" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="32dp"
            android:text="@string/whats_new"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4" />

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:columns="@{1}"
            app:list="@{posts}"
            app:host="@{Constants.FEED_FRAGMENT}"
            app:type="@{Constants.LISTING_POSTS}" />

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="16dp"
            android:visibility="@{posts.isEmpty() ? View.GONE : View.VISIBLE}" />

    </LinearLayout>

</layout>