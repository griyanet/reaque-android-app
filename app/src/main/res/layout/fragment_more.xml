<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top">

            <ImageView
                android:id="@+id/fragment_more_profile_pic_imageview"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="56dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/fragment_more_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:fontFamily="@font/roboto_medium"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_more_profile_pic_imageview" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_more_profile_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:padding="16dp"
                android:text="Perfil"
                android:textColor="?colorControlNormal"
                app:cornerRadius="16dp"
                app:icon="@drawable/outline_account_circle_24"
                app:iconSize="18dp"
                app:iconTint="?colorControlNormal"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_more_edit_button"
                app:layout_constraintEnd_toStartOf="@+id/fragment_more_edit_button"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fragment_more_edit_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_more_edit_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="32dp"
                android:padding="16dp"
                android:text="Editar"
                android:textColor="?colorControlNormal"
                app:cornerRadius="16dp"
                app:icon="@drawable/outline_edit_24"
                app:iconSize="18dp"
                app:iconTint="?colorControlNormal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_more_name_textview" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_more_logout_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:padding="16dp"
                android:text="Sair"
                android:textColor="?colorControlNormal"
                app:cornerRadius="16dp"
                app:icon="@drawable/outline_exit_to_app_24"
                app:iconSize="18dp"
                app:iconTint="?colorControlNormal"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_more_edit_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/fragment_more_edit_button"
                app:layout_constraintTop_toTopOf="@+id/fragment_more_edit_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:cardBackgroundColor="@color/primaryLightColor"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fragment_more_write_textview"
                    style="@style/AppTheme.CompleteClickableEffect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="32dp"
                    android:paddingLeft="32dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="32dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="16dp"
                    android:text="Publicar"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                <TextView
                    android:id="@+id/fragment_more_search_textview"
                    style="@style/AppTheme.CompleteClickableEffect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="32dp"
                    android:paddingLeft="32dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="32dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="16dp"
                    android:text="Pesquisar"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            app:cardBackgroundColor="@color/primaryLightColor"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <TextView
                android:id="@+id/fragment_more_setting_textview"
                style="@style/AppTheme.CompleteClickableEffect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:paddingStart="32dp"
                android:paddingLeft="32dp"
                android:paddingTop="16dp"
                android:paddingEnd="32dp"
                android:paddingRight="32dp"
                android:paddingBottom="16dp"
                android:text="Configurações"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardBackgroundColor="@color/primaryLightColor"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="16dp">

                <TextView
                    android:id="@+id/fragment_more_asked_questions_textview"
                    style="@style/AppTheme.CompleteClickableEffect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="32dp"
                    android:paddingLeft="32dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="32dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="16dp"
                    android:text="Perguntas frequentes"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                <TextView
                    android:id="@+id/fragment_more_feedback_textview"
                    style="@style/AppTheme.CompleteClickableEffect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="32dp"
                    android:paddingLeft="32dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="32dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="16dp"
                    android:text="Feedback"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                <TextView
                    android:id="@+id/fragment_more_about_textview"
                    style="@style/AppTheme.CompleteClickableEffect"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:paddingStart="32dp"
                    android:paddingLeft="32dp"
                    android:paddingTop="16dp"
                    android:paddingEnd="32dp"
                    android:paddingRight="32dp"
                    android:paddingBottom="16dp"
                    android:text="Sobre"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>