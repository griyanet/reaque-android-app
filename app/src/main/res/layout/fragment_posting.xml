<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="io.github.horaciocome1.reaque.util.Constants" />

        <variable
            name="viewmodel"
            type="io.github.horaciocome1.reaque.ui.posts.PostsViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progressbar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/default_progressbar_size"
            android:layout_gravity="center"
            android:layout_margin="32dp" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/content_constraintlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/primaryColor">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scrollbars="none"
                app:layout_constraintBottom_toTopOf="@+id/select_topic_button"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:orientation="vertical">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/title_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/title"
                        android:lineSpacingExtra="16sp"
                        android:padding="16dp"
                        android:text="@={viewmodel.title}"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5" />

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/message_edittext"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:hint="@string/message"
                        android:lineSpacingExtra="16sp"
                        android:padding="16dp"
                        android:text="@={viewmodel.message}"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1" />

                </LinearLayout>

            </ScrollView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/post_button"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:padding="16dp"
                android:text="@string/posting"
                android:onClick="@{ (view) -> viewmodel.submitPost(view) }"
                app:cornerRadius="16dp"
                app:icon="@drawable/outline_done_18"
                android:enabled="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/select_topic_button"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:cornerRadius="16dp"
                app:icon="@drawable/outline_subject_18"
                app:iconTint="?colorControlNormal"
                app:layout_constraintBottom_toBottomOf="@+id/post_button"
                app:layout_constraintEnd_toStartOf="@+id/post_button"
                app:layout_constraintTop_toTopOf="@+id/post_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/select_pic_button"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:padding="16dp"
                app:cornerRadius="16dp"
                app:icon="@drawable/outline_add_photo_alternate_18"
                app:iconTint="?colorControlNormal"
                app:layout_constraintBottom_toBottomOf="@+id/select_topic_button"
                app:layout_constraintEnd_toStartOf="@+id/select_topic_button"
                app:layout_constraintTop_toTopOf="@+id/select_topic_button" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/cancel_button"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:padding="16dp"
                android:text="@string/cancel"
                android:textColor="?colorControlNormal"
                android:onClick="@{viewmodel::cancel}"
                app:cornerRadius="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/select_pic_button"
                app:layout_constraintEnd_toStartOf="@+id/select_pic_button"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/select_pic_button" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/select_topics_bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_bottomsheet_stroke_light"
            android:orientation="vertical"
            app:behavior_hideable="true"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                app:srcCompat="@drawable/outline_drag_handle_24" />

            <TextView
                android:id="@+id/selected_topic_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="56dp"
                android:layout_marginLeft="56dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="56dp"
                android:layout_marginRight="56dp"
                android:layout_marginBottom="32dp"
                android:text="@{viewmodel.post.topic.title}"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                android:textColor="@color/secondaryColor" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/default_stroke_width"
                android:background="@android:color/black" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/topics_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/select_pic_bottomsheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:behavior_hideable="true"
            app:cardBackgroundColor="@color/primaryColor"
            app:cardCornerRadius="16dp"
            app:cardElevation="0dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_bottomsheet_stroke_light"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:uri="@{viewmodel.imageUri}"
                        app:type="@{Constants.DEFAULT}"/>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/select_pic_from_camera_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/camera"
                        app:icon="@drawable/outline_camera_18" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/select_pic_from_gallery_button"
                        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="@string/gallery"
                        app:icon="@drawable/outline_collections_18" />

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </com.google.android.material.card.MaterialCardView>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>