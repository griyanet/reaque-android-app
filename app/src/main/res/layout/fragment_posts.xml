<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="java.util.List" />

        <import type="io.github.horaciocome1.reaque.data.topics.Topic" />

        <import type="io.github.horaciocome1.reaque.data.posts.Post" />

        <import type="android.content.res.Configuration" />

        <variable
            name="topics"
            type="List&lt;Topic&gt;" />

        <variable
            name="posts"
            type="List&lt;Post&gt;" />

    </data>


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp"
                    android:lineSpacingExtra="8sp"
                    android:text="@string/posts_title"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline3"
                    android:textColor="@color/primaryTextColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/default_stroke_width"
                    android:layout_marginStart="24dp"
                    android:layout_marginLeft="24dp"
                    android:background="@color/secondaryColor" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/topics_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:scrollbars="none"
                    app:orientation="@{Configuration.ORIENTATION_PORTRAIT}"
                    app:topics="@{topics}" />

                <ProgressBar
                    android:id="@+id/topics_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/posts_recyclerview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:scrollbars="none"
                    app:posts="@{posts}" />

                <ProgressBar
                    android:id="@+id/posts_progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="32dp" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/favorites_fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_margin="16dp"
            android:tint="@color/primaryLightColor"
            app:srcCompat="@drawable/outline_bookmark_border_18" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>