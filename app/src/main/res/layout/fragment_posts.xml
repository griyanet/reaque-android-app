<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_posts_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"
        app:navigationIcon="@drawable/outline_arrow_back_24"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="?actionBarSize">

        <TextView
            android:id="@+id/fragment_posts_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Casamento"
            android:maxLines="2"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_light"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            android:layout_marginLeft="?attr/actionBarSize"
            android:layout_marginStart="?attr/actionBarSize"
            android:layout_marginBottom="16dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/fragment_posts_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fragment_posts_authors_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver autores"
        android:textSize="12sp"
        android:layout_gravity="bottom|center"
        android:layout_margin="16dp"
        app:cornerRadius="32dp"
        style="@style/Widget.MaterialComponents.Button" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
