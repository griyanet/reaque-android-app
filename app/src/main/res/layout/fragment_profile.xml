<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="user"
            type="io.github.horaciocome1.reeque.data.users.User" />

    </data>

    <ScrollView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/fragment_profile_toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/fragment_profile_cover_imageview" />

            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="0dp"
                android:layout_height="434dp"
                android:id="@+id/fragment_profile_cover_imageview"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:tint="#75000000"/>

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fragment_profile_profile_pic_imageview"
                android:layout_width="112dp"
                android:layout_height="112dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_cover_imageview"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.08"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_profile_cover_imageview"
                app:layout_constraintVertical_bias="0.525" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_profile_message_button"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="40dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="16dp"
                app:icon="@drawable/ic_email_black_24dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_profile_action_button"
                app:layout_constraintTop_toBottomOf="@+id/fragment_profile_cover_imageview" />

            <TextView
                android:text="@{user.description}"
                android:layout_width="176dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="18sp"
                android:textColor="@color/text_on_primary"
                android:maxLines="10"
                android:fontFamily="@font/roboto_thin"
                android:id="@+id/fragment_profile_description_textview"
                app:layout_constraintTop_toTopOf="@+id/fragment_profile_cover_imageview"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_cover_imageview"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="@+id/fragment_profile_cover_imageview"
                android:layout_marginRight="32dp"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="32dp"/>

            <TextView
                android:text="@{user.totalFollowers}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_profile_followers_textview"
                android:textColor="@color/text_on_primary"
                android:fontFamily="@font/roboto_thin"
                android:textSize="14sp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/fragment_profile_followers_subtitle_textview"
                app:layout_constraintStart_toStartOf="@+id/fragment_profile_followers_subtitle_textview"
                app:layout_constraintEnd_toEndOf="@+id/fragment_profile_followers_subtitle_textview"/>

            <TextView
                android:text="Seguidores"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_profile_followers_subtitle_textview"
                android:textColor="@color/text_on_primary"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_thin"
                android:textAllCaps="true"
                app:layout_constraintStart_toEndOf="@+id/fragment_profile_profile_pic_imageview"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_cover_imageview"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/fragment_profile_action_button"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="8dp"
                android:text="Seguir"
                android:textStyle="bold"
                app:cornerRadius="32dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_profile_profile_pic_imageview"
                app:layout_constraintTop_toBottomOf="@+id/fragment_profile_cover_imageview" />

            <TextView
                android:text="Posts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_on_primary"
                android:textAllCaps="true"
                android:textSize="12sp"
                android:fontFamily="@font/roboto_thin"
                android:id="@+id/fragment_profile_posts_subtitle_textview"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                app:layout_constraintStart_toEndOf="@+id/fragment_profile_followers_subtitle_textview"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_cover_imageview"
                app:layout_constraintHorizontal_bias="0.0"/>

            <TextView
                android:text="@{user.totalPosts}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_on_primary"
                android:fontFamily="@font/roboto_thin"
                android:textSize="14sp"
                android:id="@+id/fragment_profile_posts_textview"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/fragment_profile_posts_subtitle_textview"
                app:layout_constraintEnd_toEndOf="@+id/fragment_profile_posts_subtitle_textview"
                app:layout_constraintStart_toStartOf="@+id/fragment_profile_posts_subtitle_textview"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_location_on_black_24dp"
                android:id="@+id/item_topic_post1_profile_pic_imageview"
                app:layout_constraintEnd_toStartOf="@+id/fragment_profile_town_textview"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@+id/fragment_profile_town_textview"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_town_textview"/>

            <TextView
                android:id="@+id/fragment_profile_town_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="64dp"
                android:layout_marginLeft="64dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:fontFamily="@font/roboto_light"
                android:text="@{user.town}"
                android:textColor="@color/secondary_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_profile_action_button" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_history_black_24dp"
                android:id="@+id/imageView3"
                app:layout_constraintEnd_toStartOf="@+id/fragment_profile_since_textview"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                app:layout_constraintTop_toTopOf="@+id/fragment_profile_since_textview"
                app:layout_constraintBottom_toBottomOf="@+id/fragment_profile_since_textview"/>

            <TextView
                android:text="@{user.since}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/fragment_profile_since_textview"
                android:textColor="@color/secondary_text"
                android:fontFamily="@font/roboto_light"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginLeft="64dp"
                android:layout_marginStart="64dp"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@+id/fragment_profile_town_textview"/>

            <TextView
                android:text="@{user.latestPost}"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:textAlignment="center"
                android:lineSpacingExtra="16sp"
                android:textSize="16sp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/primary_text"
                android:id="@+id/fragment_profile_latest_textview"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_profile_since_textview"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"/>

            <Button
                android:id="@+id/fragment_profile_more_button"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:lineSpacingExtra="16dp"
                android:text="Mais"
                android:textAllCaps="false"
                android:textSize="16sp"
                app:icon="@drawable/outline_list_24_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_profile_latest_textview" />


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="32dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="32dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginBottom="96dp"
                android:orientation="vertical"
                android:background="@drawable/background_card"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/fragment_profile_more_button">

                <TextView
                    android:id="@+id/fragment_profile_name_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Headline4"
                    android:fontFamily="@font/roboto_thin"
                    android:text="@{user.name}"
                    android:orientation="vertical"
                    android:padding="32dp"/>

                <TextView
                    android:id="@+id/fragment_profile_email_textview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:fontFamily="@font/roboto_thin"
                    android:text="@{user.email}"
                    android:orientation="vertical"
                    android:padding="32dp"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</layout>