<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="io.github.horaciocome1.reaque.utilities.Constants" />

        <variable
            name="post"
            type="io.github.horaciocome1.reaque.data.posts.Post" />

        <variable
            name="viewmodel"
            type="io.github.horaciocome1.reaque.ui.posts.PostsViewModel" />

    </data>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/fragment_read_progressbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp" />

        <ImageView
            android:id="@+id/fragment_read_cover2_imageview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:url="@{post.pic}"
            app:type="@{Constants.BLUR}"/>

        <ImageView
            android:id="@+id/fragment_read_cover_imageview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="120dp"
            android:onClick="@{(view) -> viewmodel.openViewer(view, post)}"
            app:url="@{post.pic}"
            app:type="@{Constants.DEFAULT}"/>

        <LinearLayout
            android:id="@+id/fragment_read_bottom_sheet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="54.5dp"
            android:background="@drawable/background_bottomsheet"
            android:orientation="vertical"
            app:behavior_hideable="false"
            app:behavior_peekHeight="120dp"
            app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="250dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginRight="32dp"
                        android:lineSpacingExtra="8dp"
                        android:text="@{post.title}"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline4"
                        android:textColor="@color/primaryTextColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginRight="32dp"
                        android:lineSpacingExtra="16sp"
                        android:text="@{post.message}"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:textColor="@color/primaryTextColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginRight="32dp"
                        android:text="@{post.user.name}"
                        android:fontFamily="@font/roboto_light"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
                        android:textColor="@color/primaryTextColor" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginLeft="32dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginRight="32dp"
                        android:text="@{post.date}"
                        android:textAllCaps="true"
                        android:fontFamily="@font/roboto_light"
                        android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                        android:textColor="@color/primaryTextColor" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32dp"
                        android:layout_marginBottom="32dp"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/add_to_favorites_button"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:padding="16dp"
                            android:text="@string/favorite"
                            android:onClick="@{(button) -> viewmodel.addToFavorites(button, post)}"
                            android:textColor="@color/orange"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/outline_bookmark_border_18"
                            app:iconTint="@color/orange"
                            app:rippleColor="@color/orange"
                            app:strokeColor="@color/orange"
                            app:strokeWidth="@dimen/default_stroke_width" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/remove_from_favorites_button"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginLeft="16dp"
                            android:layout_marginEnd="4dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:onClick="@{(button) -> viewmodel.removeFromFavorites(button, post)}"
                            android:padding="16dp"
                            android:text="@string/undo"
                            android:textColor="@color/orange"
                            android:visibility="gone"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/outline_bookmark_border_18"
                            app:iconTint="@color/orange"
                            app:rippleColor="@color/orange"
                            app:strokeColor="@color/orange"
                            app:strokeWidth="@dimen/default_stroke_width" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/comments_button"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="4dp"
                            android:layout_marginLeft="4dp"
                            android:layout_marginEnd="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_weight="0.7"
                            android:padding="16dp"
                            android:text="@string/share"
                            android:textColor="@color/green"
                            app:cornerRadius="16dp"
                            app:icon="@drawable/outline_share_18"
                            app:iconTint="@color/green"
                            app:rippleColor="@color/green"
                            app:strokeColor="@color/green"
                            app:strokeWidth="@dimen/default_stroke_width" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>

        <ImageView
            android:id="@+id/imageview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="32dp"
            android:layout_gravity="top|end"
            android:scaleType="centerCrop"
            app:url="@{post.user.pic}"
            app:type="@{Constants.CIRCLE}"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>