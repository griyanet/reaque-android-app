<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="topic"
            type="io.github.horaciocome1.reeque.data.topics.Topic" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_card"
        android:layout_margin="8dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/item_topic_total_readers_textview2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:text=" pessoas leem sobre isto."
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/item_topic_post3_profile_pic_imageview"
            app:layout_constraintStart_toEndOf="@+id/item_topic_total_readers_textview"
            app:layout_constraintTop_toBottomOf="@+id/item_topic_more_button"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/item_topic_post2_rating_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Float.toString(topic.post2Rating)}"
            android:fontFamily="@font/roboto_light"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_post2_title_textview"
            app:layout_constraintStart_toStartOf="@+id/item_topic_total_posts_textview"
            app:layout_constraintTop_toTopOf="@+id/item_topic_post2_title_textview"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/item_topic_post2_title_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:maxLines="3"
            android:padding="12dp"
            android:text="@{topic.post2Title}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintEnd_toStartOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/item_topic_post1_rating_textview"
            app:layout_constraintTop_toBottomOf="@+id/item_topic_post1_title_textview" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_topic_post2_profile_pic_imageview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_post2_title_textview"
            app:layout_constraintEnd_toEndOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintStart_toStartOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintTop_toTopOf="@+id/item_topic_post2_title_textview" />

        <TextView
            android:id="@+id/item_topic_title_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_light"
            android:maxLines="3"
            android:text="@{topic.title}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            app:layout_constraintEnd_toStartOf="@+id/item_topic_favorite_button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_topic_total_posts_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_light"
            android:text="@{Integer.toString(topic.totalPosts)}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintEnd_toEndOf="@+id/item_topic_title_textview"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/item_topic_title_textview"
            app:layout_constraintTop_toBottomOf="@+id/item_topic_title_textview" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="0.2dp"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@color/divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/item_topic_total_posts_textview" />

        <Button
            android:id="@+id/item_topic_favorite_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="42dp"
            android:layout_height="42dp"
            app:icon="@drawable/outline_star_border_24_black"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_title_textview"
            app:layout_constraintEnd_toEndOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintStart_toStartOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintTop_toTopOf="@+id/item_topic_title_textview" />

        <TextView
            android:id="@+id/item_topic_post1_rating_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Float.toString(topic.post1Rating)}"
            android:fontFamily="@font/roboto_light"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_post1_title_textview"
            app:layout_constraintStart_toStartOf="@+id/item_topic_total_posts_textview"
            app:layout_constraintTop_toTopOf="@+id/item_topic_post1_title_textview"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/item_topic_post1_title_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:maxLines="3"
            android:padding="12dp"
            android:text="@{topic.post1Title}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintEnd_toStartOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/item_topic_post1_rating_textview"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_topic_post1_profile_pic_imageview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_post1_title_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_topic_post1_title_textview" />

        <TextView
            android:id="@+id/item_topic_post3_rating_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{Float.toString(topic.post3Rating)}"
            android:fontFamily="@font/roboto_light"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_post3_title_textview"
            app:layout_constraintStart_toStartOf="@+id/item_topic_total_posts_textview"
            app:layout_constraintTop_toTopOf="@+id/item_topic_post3_title_textview"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"/>

        <TextView
            android:id="@+id/item_topic_post3_title_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:maxLines="3"
            android:padding="12dp"
            android:text="@{topic.post3Title}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintEnd_toStartOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/item_topic_post1_rating_textview"
            app:layout_constraintTop_toBottomOf="@+id/item_topic_post2_title_textview" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_topic_post3_profile_pic_imageview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_post3_title_textview"
            app:layout_constraintEnd_toEndOf="@+id/item_topic_post2_profile_pic_imageview"
            app:layout_constraintStart_toStartOf="@+id/item_topic_post2_profile_pic_imageview"
            app:layout_constraintTop_toTopOf="@+id/item_topic_post3_title_textview" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_topic_more_button"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Mais"
            app:icon="@drawable/outline_list_24_black"
            app:layout_constraintStart_toStartOf="@+id/item_topic_title_textview"
            app:layout_constraintTop_toBottomOf="@+id/item_topic_post3_profile_pic_imageview"
            android:clickable="true"
            android:focusable="true"
            app:cornerRadius="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/item_topic_less_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:text="Ver menos"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_more_button"
            app:layout_constraintStart_toEndOf="@+id/item_topic_more_button"
            app:layout_constraintTop_toTopOf="@+id/item_topic_more_button"
            app:cornerRadius="8dp"/>

        <TextView
            android:id="@+id/item_topic_total_readers_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@{Integer.toString(topic.totalReaders)}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_topic_title_textview"
            app:layout_constraintTop_toBottomOf="@+id/item_topic_more_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>