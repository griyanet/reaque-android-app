<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="topic"
            type="io.github.horaciocome1.reaque.data.topics.Topic" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_card"
        android:layout_margin="4dp"
        android:padding="16dp">

        <TextView
            android:id="@+id/item_topic_total_readers_textview2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:text=" pessoas leem sobre isto."
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/item_topic_writers_button"
            app:layout_constraintStart_toEndOf="@+id/item_topic_total_readers_textview"
            app:layout_constraintTop_toBottomOf="@+id/divider6"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/item_topic_post2_rating_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/roboto_light"
            android:text="@{Float.toString(topic.posts[1].rating)}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_post2_title_textview"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toTopOf="@+id/item_topic_post2_title_textview" />

        <TextView
            android:id="@+id/item_topic_post2_title_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true"
            android:maxLines="3"
            android:padding="12dp"
            android:text="@{topic.posts[1].title}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintEnd_toStartOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/item_topic_post1_rating_textview"
            app:layout_constraintTop_toBottomOf="@+id/item_topic_post1_title_textview" />

        <ImageView
            android:id="@+id/item_topic_post2_profile_pic_imageview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_post2_title_textview"
            app:layout_constraintEnd_toEndOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintStart_toStartOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintTop_toTopOf="@+id/item_topic_post2_title_textview" />

        <TextView
            android:id="@+id/item_topic_title_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_light"
            android:maxLines="3"
            android:text="@{topic.title}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintEnd_toStartOf="@+id/item_topic_more_button"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="0.2dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/background_divider_horizontal"
            app:layout_constraintEnd_toEndOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintStart_toStartOf="@+id/item_topic_title_textview"
            app:layout_constraintTop_toBottomOf="@+id/item_topic_title_textview" />

        <View
            android:id="@+id/divider6"
            android:layout_width="0dp"
            android:layout_height="0.2dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/background_divider_horizontal"
            app:layout_constraintEnd_toEndOf="@+id/divider"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toBottomOf="@+id/item_topic_post3_title_textview" />

        <Button
            android:id="@+id/item_topic_more_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/outline_list_24_black"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_title_textview"
            app:layout_constraintEnd_toEndOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintStart_toStartOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintTop_toTopOf="@+id/item_topic_title_textview" />

        <TextView
            android:id="@+id/item_topic_post1_rating_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/roboto_light"
            android:text="@{Float.toString(topic.posts[0].rating)}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_post1_title_textview"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toTopOf="@+id/item_topic_post1_title_textview" />

        <TextView
            android:id="@+id/item_topic_post1_title_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true"
            android:maxLines="3"
            android:padding="12dp"
            android:text="@{topic.posts[0].title}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintEnd_toStartOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/item_topic_post1_rating_textview"
            app:layout_constraintTop_toBottomOf="@+id/divider" />

        <ImageView
            android:id="@+id/item_topic_post1_profile_pic_imageview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_post1_title_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/item_topic_post1_title_textview" />

        <TextView
            android:id="@+id/item_topic_post3_rating_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:fontFamily="@font/roboto_light"
            android:text="@{Float.toString(topic.posts[2].rating)}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_post3_title_textview"
            app:layout_constraintStart_toStartOf="@+id/divider"
            app:layout_constraintTop_toTopOf="@+id/item_topic_post3_title_textview" />

        <TextView
            android:id="@+id/item_topic_post3_title_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:clickable="true"
            android:ellipsize="end"
            android:focusable="true"
            android:maxLines="3"
            android:padding="12dp"
            android:text="@{topic.posts[2].title}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintEnd_toStartOf="@+id/item_topic_post1_profile_pic_imageview"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toEndOf="@+id/item_topic_post1_rating_textview"
            app:layout_constraintTop_toBottomOf="@+id/item_topic_post2_title_textview" />

        <ImageView
            android:id="@+id/item_topic_post3_profile_pic_imageview"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:clickable="true"
            android:focusable="true"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_post3_title_textview"
            app:layout_constraintEnd_toEndOf="@+id/item_topic_post2_profile_pic_imageview"
            app:layout_constraintStart_toStartOf="@+id/item_topic_post2_profile_pic_imageview"
            app:layout_constraintTop_toTopOf="@+id/item_topic_post3_title_textview" />

        <TextView
            android:id="@+id/item_topic_total_readers_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@{Integer.toString(topic.totalReaders)}"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/item_topic_title_textview"
            app:layout_constraintTop_toBottomOf="@+id/divider6" />

        <Button
            android:id="@+id/item_topic_writers_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:icon="@drawable/outline_account_circle_16"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_comments_button"
            app:layout_constraintEnd_toStartOf="@+id/item_topic_comments_button"
            app:layout_constraintTop_toTopOf="@+id/item_topic_comments_button" />

        <Button
            android:id="@+id/item_topic_comments_button"
            style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
            android:layout_width="32dp"
            android:layout_height="wrap_content"
            app:icon="@drawable/outline_forum_16"
            app:layout_constraintBottom_toBottomOf="@+id/item_topic_total_readers_textview2"
            app:layout_constraintEnd_toEndOf="@+id/item_topic_more_button"
            app:layout_constraintStart_toStartOf="@+id/item_topic_more_button"
            app:layout_constraintTop_toTopOf="@+id/item_topic_total_readers_textview2" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>