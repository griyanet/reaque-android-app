<layout>

    <data>

        <variable
            name="user"
            type="io.github.horaciocome1.reaque.data.users.User" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp"
        style="@style/AppTheme.CompleteClickableEffect">

        <ImageView
            android:id="@+id/item_user_cover_imageview"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:tint="#99ffffff"
            android:foreground="@drawable/background_item_user"/>

        <ImageView
            android:id="@+id/item_user_profile_pic_imageview"
            android:layout_width="140dp"
            android:layout_height="80dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/item_user_name_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@{user.name}"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
            app:layout_constraintEnd_toEndOf="@+id/item_user_profile_pic_imageview"
            app:layout_constraintStart_toStartOf="@+id/item_user_profile_pic_imageview"
            app:layout_constraintTop_toBottomOf="@+id/item_user_profile_pic_imageview" />

        <TextView
            android:id="@+id/item_user_topics_textview"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="@+id/item_user_profile_pic_imageview"
            app:layout_constraintStart_toStartOf="@+id/item_user_profile_pic_imageview"
            app:layout_constraintTop_toBottomOf="@+id/item_user_name_textview" />

        <TextView
            android:id="@+id/item_user_town_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:text="@{user.town}"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Caption"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/item_user_profile_pic_imageview"
            app:layout_constraintStart_toStartOf="@+id/item_user_profile_pic_imageview"
            app:layout_constraintTop_toBottomOf="@+id/item_user_topics_textview" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>